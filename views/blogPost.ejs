<div data-id="<%= blog.id %>" id="article">
  <h2 class="text-4xl font-bold mb-4"><%= blog.article_title%></h2>

  <img src="/images/<%= blog.article_image%>" class="w-full mb-20" />

  <p class="mb-40"><%= blog.article_content%></p>

  <%- include('stars')%> <%- include('commentForm')%>

  <div class="flex flex-wrap -mx-2">
    <% for(comment of comments) { %>
    <div class="w-full sm:w-1/2 md:w-1/3 self-stretch p-2 mb-2">
      <div class="rounded shadow-md h-full">
        <div class="px-6 py-5">
          <div class="font-semibold text-lg mb-2">
            <a class="text-gray-900 hover:text-gray-700" href="/blog/<%= blog.id%>"><%= comment.commenter%></a>
          </div>

          <p class="text-gray-800"><%= comment.comment%></p>
        </div>
      </div>
    </div>
    <%}%> <%- include('register')%>
  </div>
</div>
