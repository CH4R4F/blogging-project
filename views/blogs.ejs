<div class="flex flex-wrap -mx-2">
    <% if(data.length <=0) { %>
        <h1>There is no articles yet</h1>
        <% } else { %>
            <div class="w-full sm:w-1/2 md:w-1/3 self-stretch p-2 mb-2">
                <div class="rounded shadow-md h-full">
                    <a href="/blog/<%= article.id%>">
                        <img class="w-full m-0 rounded-t lazy" src="/images/<%= article.image%>" width="960"
                            height="500" alt="This post thumbnail">
                    </a>
                    <div class="px-6 py-5">
                        <div class="font-semibold text-lg mb-2">
                            <a class="text-gray-900 hover:text-gray-700" href="/blog/<%= article.id%>">
                                <%= article.title%>
                            </a>
                        </div>
                        <p class="text-gray-700 mb-1" title="Published date">
                            <%= article.date%>
                        </p>
                        <p class="text-gray-800">
                            <%= article.description%>
                        </p>
                    </div>
                </div>
            </div>
            <% } %>
</div>