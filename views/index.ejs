<!-- blogs -->
<% if(blogs.length <= 0) { %>
<h1>Oops o blogs yet</h1>

<% } else { %>
<div class="flex flex-wrap -mx-2">
  <% for(blog of blogs) { %>
  <div class="w-full sm:w-1/2 md:w-1/3 self-stretch p-2 mb-2">
    <div class="rounded shadow-md h-full">
      <a href="/blog/<%= blog.id%>">
        <img
          class="w-full m-0 rounded-t lazy"
          src="/images/<%= blog.article_image%>"
          width="960"
          style="height: 200px !important;"
          alt="This post thumbnail"
        />
      </a>
      <div class="px-6 py-5">
        <div class="font-semibold text-lg mb-2">
          <a class="text-gray-900 hover:text-gray-700" href="/blog/<%= blog.id%>"><%= blog.article_title%></a>
        </div>

        <p class="text-gray-800">
          <%= blog.article_content%>
        </p>
      </div>
    </div>
  </div>
  <%}%>
</div>
<%}%>