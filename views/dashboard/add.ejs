<div class="w-full flex-grow justify-center items-center flex">
    <div class="flex flex-wrap w-full">
        <div class="w-full lg:w-1/2 pr-0 lg:pr-2 mx-auto">
            <div class="leading-loose">
                <form id="addArticle" class="p-10 bg-white rounded shadow-xl" enctype="multipart/form-data">
                    <div class="flex-grow">
                        <label class="block text-sm text-gray-600" for=" name ">Title</label>
                        <input class="w-full px-5 py-1 text-gray-700 bg-gray-200 rounded" id="title" name="title" type="text" required placeholder="Your Title" aria-label="title" />
                    </div>
                    <div class="mt-6">
                        <label form="image" class="block text-sm text-gray-600" for=" name ">Select Image</label>
                        <input type="file" name="image" id="image" />
                    </div>
                    <!-- category select -->
                    <div class="mt-6">
                        <label class="block text-sm text-gray-600" for=" name ">Category</label>
                        <select class="w-full px-5 py-1 text-gray-700 bg-gray-200 rounded" id="category" name="category" type="text" required placeholder="Your Category" aria-label="category">
              <option selected disabled>select a category</option>
              <option value="1">Category 1</option>
              <option value="2">Category 2</option>
              <option value="3">Category 3</option>
            </select>
                    </div>
                    <div class="mt-6">
                        <label class="block text-sm text-gray-600" for=" message ">Content</label>
                        <textarea class="w-full px-5 py-2 text-gray-700 bg-gray-200 rounded" id="content" name="content" rows="6" required="" placeholder=" Your Content.. " aria-label=" content "></textarea>
                    </div>
                    <div class="py-6">
                        <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" type=" submit ">
              Create
            </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

